@model AlgorytmDobieraniaZasobowProdukcyjnych.Data.DaneWalkaDoTabel

<script>
    $('thead > tr').addClass('table-primary');
    $('tbody > tr').addClass('table-secondary');
</script>

@if (!(Model.ImageWalek is null))
{
    <div id="imgContainer" class="container">
        <div style="text-align:center">
            <h3>Rysunek techniczny wałka numer @Model.ImageWalek.Substring(13, 2): </h3>
            <img class="img-fluid" src="@Model.ImageWalek" alt="Alternate Text" />
        </div>
    </div>
}


<h2>Dane dla zasobu produkcyjnego klasy wał</h2>
<table class="table table-bordered table-sm" id="table">
    <thead>
        <tr>
            @foreach (var info in Model.AtributeName)
            {
                <td>@info</td>
            }
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach (var value in Model.AtributeValue)
            {
                <td>@string.Format("{0:0.00}", value)</td>
            }
        </tr>
    </tbody>

</table>

<br />
<br />
<br />
<h2>Naddatki dla wału</h2>
<table class="table table-bordered table-sm">
    <thead>
        <tr>
            @foreach (var info in Model.NaddatkiNames)
            {
                <td>@info</td>
            }

        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.NaddatkiValues[0].Count; i++)
        {
            <tr>
                @foreach (var list in Model.NaddatkiValues)
                {
                    {
                        <td>@list[i]</td>
                    }
                }
            </tr>
        }
    </tbody>
</table>

<br />
<br />
<br />
<h2>Dane dla poszczególnych stopni wału</h2>
<table class="table table-bordered table-sm">
    <thead>
        <tr>
            @foreach (var info in Model.ListName)
            {
                <td>@info</td>
            }

        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.ListValue[0].Length; i++)
        {
            <tr>
                @for (int ii = 0; ii < Model.ListValue.Count; ii++)
                {
                    if (ii == 0 || ii == 3 || ii == 4 || ii == 6)
                    {
                        <td>@Model.ListValue[ii][i]</td>
                    }
                    else
                    {
                        <td>@string.Format("{0:0.0}", Model.ListValue[ii][i])</td>
                    }
                }
                @*@foreach (var list in Model.ListValue)
                    {
                        if (Model.Index == 0 || Model.Index == 3 || Model.Index == 4 || Model.Index == 6)
                        {
                            <td>@list[i]</td>
                        }
                        else
                        {
                            <td>@string.Format("{0:0.0}", list[i])</td>
                        }
                        Model.Index++;
                    }*@
            </tr>
        }
    </tbody>

</table>
