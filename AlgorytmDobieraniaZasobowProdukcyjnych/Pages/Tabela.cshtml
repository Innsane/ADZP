@page
@model AlgorytmDobieraniaZasobowProdukcyjnych.Pages.TabelaModel
@{
    ViewData["Title"] = "Tabela";
}
<style>
    img {
        display: block;
        max-width: 333px;
        max-height: 130px;
        width: auto;
        height: auto;
        margin-left:auto;
        margin-right:auto;
    }

    #imgContainer div{
        height: 200px;
        width: auto;
        text-align: center;
    }
    #upper img {
        display: block;
        max-width: 400px;
        max-height: 160px;
        width: auto;
        height: auto;
        margin-left: auto;
        margin-right: auto;
    }
    #lower img {
        display: block;
        max-width: 300px;
        max-height: 130px;
        width: auto;
        height: auto;
        margin-left: auto;
        margin-right: auto;
    }
</style>

@if (!(Model.Dane.ImageLathe is null))
{
<div id="imgContainer" class="container">
    <div id="upper" class="row">
        <div class="col-6">
            <label class="">Obrabiarka: </label>
            <img class="img-fluid" src="@Model.Dane.ImageLathe" alt="Alternate Text" />
        </div>
        <div class="col-6">
            <label>Rysunek techniczny wałka numer @Model.Dane.ImageWalek.Substring(13,2): </label>
            <img class="img-fluid" src="@Model.Dane.ImageWalek" alt="Alternate Text" />
        </div>
    </div>
    <br />
    <div id="lower" class="row">
        <div class="col-4">
            <label>Narzędzie do obróbki zgrubnej: </label>
            <img class="img-fluid" src="@Model.Dane.ImageToolRG" alt="Alternate Text" />
        </div>
        <div class="col-4">
            <label>Narzędzie do obróbki kształtującej: </label>
            <img class="img-fluid" src="@Model.Dane.ImageToolMT" alt="Alternate Text" />
        </div>
        <div class="col-4">
            <label>Narzędzie do obróbki wykańczającej: </label>
            <img class="img-fluid" src="@Model.Dane.ImageToolFN" alt="Alternate Text" />
        </div>
    </div>
</div>

}

<h2>Dane dla zasobu produkcyjnego klasy wał</h2>
<table class="table table-bordered table-sm">
    <thead>
        <tr>
            @foreach (var info in Model.Data.AtributeName)
            {
                <td>@info</td>
            }
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach (var value in Model.Data.AtributeValue)
            {
                <td>@string.Format("{0:0.00}", value)</td>
            }
        </tr>
    </tbody>

</table>

<br />
<br />
<br />
<h2>Naddatki dla wału</h2>
<table class="table table-bordered table-sm">
    <thead>
        <tr>
            @foreach (var info in Model.Data.NaddatkiNames)
            {
                <td>@info</td>
            }

        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Data.NaddatkiValues[0].Count; i++)
        {
            <tr>
                @foreach (var list in Model.Data.NaddatkiValues)
                {
                    {
                        <td>@list[i]</td>
                    }
                }
            </tr>
        }
    </tbody>
</table>

<br />
<br />
<br />
<h2>Dane dla poszczególnych stopni wału</h2>
<table class="table table-bordered table-sm">
    <thead>
        <tr>
            @foreach (var info in Model.Data.ListName)
            {
                <td>@info</td>
            }

        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Data.ListValue[0].Length; i++)
        {

            <tr>
                @foreach (var list in Model.Data.ListValue)
                {
                    if (Model.Index == 0 || Model.Index == 3 || Model.Index == 4 || Model.Index == 6)
                    {
                        <td>@list[i]</td>
                    }
                    else
                    {
                        <td>@string.Format("{0:0.0}", list[i])</td>
                    }
                    Model.Index++;
                }
            </tr>
            Model.Index = 0;
        }
    </tbody>

</table>

<br />
<br />
<br />
<h2>Parametry skrawania dla wybranych narzędzi do obróbki zgrubnej: </h2>
@foreach (var table in Model.Dane.ParametersRG)
{
    <table class="table table-bordered table-sm">
        <thead>
            <tr>
                @foreach (var info in Model.Dane.ParametersNamesRG)
                {
                    <td>@info</td>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var parameter in table)
            {
                <tr>
                    @for (int i = 0; i < parameter.Count; i++)
                    {
                        if (Model.Index == 0 || Model.Index == 3 || Model.Index == 4)
                        {
                            <td>@parameter[i]</td>
                        }
                        else
                        {
                            <td>@string.Format("{0:0.00}", parameter[i])</td>
                        }
                        Model.Index++;
                    }
                </tr>
                Model.Index = 0;
            }
        </tbody>
    </table>
}
<br />
<br />
<br />
<h2>Parametry skrawania dla wybranych narzędzi do obróbki kształtującej: </h2>
@foreach (var table in Model.Dane.ParametersMT)
{
    <table class="table table-bordered table-sm">
        <thead>
            <tr>
                @foreach (var info in Model.Dane.ParametersNamesMT)
                {
                    <td>@info</td>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var parameter in table)
            {
                if ((double)parameter[4] == 0) continue;
                <tr>
                    @for (int i = 0; i < parameter.Count; i++)
                    {
                        if (Model.Index == 0 || Model.Index == 3)
                        {
                            <td>@parameter[i]</td>
                        }
                        else
                        {
                            <td>@string.Format("{0:0.00}", parameter[i])</td>
                        }
                        Model.Index++;
                    }
                </tr>
                Model.Index = 0;
            }
        </tbody>
    </table>
}
<br />
<br />
<br />
<h2>Parametry skrawania dla wybranych narzędzi do obróbki wykańczającej: </h2>
@foreach (var table in Model.Dane.ParametersFN)
{
    <table class="table table-bordered table-sm">
        <thead>
            <tr>
                @foreach (var info in Model.Dane.ParametersNamesFN)
                {
                    <td>@info</td>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var parameter in table)
            {
                if ((double)parameter[4] == 0) continue;
                <tr>
                    @for (int i = 0; i < parameter.Count; i++)
                    {
                        if (Model.Index == 0 || Model.Index == 3)
                        {
                            <td>@parameter[i]</td>
                        }
                        else
                        {
                            <td>@string.Format("{0:0.00}", parameter[i])</td>
                        }
                        Model.Index++;
                    }
                </tr>
                Model.Index = 0;
            }
        </tbody>
    </table>
}